APP_NAME="DriveLink - Driver Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=drivelink
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local

# Driver Verification API Credentials
# NIMC (National Identity Management Commission)
NIMC_API_URL=https://api.nimc.gov.ng/v1
NIMC_API_KEY=your_nimc_api_key_here
NIMC_CLIENT_ID=your_nimc_client_id_here
NIMC_CLIENT_SECRET=your_nimc_client_secret_here

# FRSC (Federal Road Safety Corps)
FRSC_API_URL=https://api.frsc.gov.ng/v1
FRSC_API_KEY=your_frsc_api_key_here
FRSC_CLIENT_ID=your_frsc_client_id_here
FRSC_CLIENT_SECRET=your_frsc_client_secret_here

# CBN/NIBSS (Bank Verification Number)
CBN_API_URL=https://api.cbn.gov.ng/v1
CBN_API_KEY=your_cbn_api_key_here
CBN_CLIENT_ID=your_cbn_client_id_here
CBN_CLIENT_SECRET=your_cbn_client_secret_here

NIBSS_API_URL=https://api.nibss-plc.com.ng/v1
NIBSS_API_KEY=your_nibss_api_key_here
NIBSS_CLIENT_ID=your_nibss_client_id_here
NIBSS_CLIENT_SECRET=your_nibss_client_secret_here

# OCR Service Providers
# Google Vision API
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json

# AWS Textract
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_TEXTRACT_ROLE_ARN=arn:aws:iam::account:role/textract-role

# Tesseract OCR (Local installation)
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng

# Security Configuration
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30
OTP_EXPIRY_MINUTES=10
SESSION_TIMEOUT_MINUTES=60
MAX_REQUEST_SIZE_MB=10
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true
FORCE_HTTPS=true
HSTS_ENABLED=true

# File Storage Configuration
DOCUMENTS_STORAGE_DISK=documents
DOCUMENTS_MAX_SIZE=10240
DOCUMENTS_ALLOWED_TYPES=jpg,jpeg,png,pdf
MAX_FILE_SIZE_MB=10

# SMS/Email Notification Services
# Twilio SMS
TWILIO_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=your_twilio_phone_number_here

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@drivelink.com
SENDGRID_FROM_NAME="DriveLink Support"

# Termii SMS (Nigerian SMS Provider)
TERMII_API_KEY=your_termii_api_key_here
TERMII_SENDER_ID=DriveLink
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# Default Commission Rates
DEFAULT_COMMISSION_RATE=15.00
PLATFORM_FEE_PERCENTAGE=2.50

# SMS Provider Configuration
SMS_PROVIDER=termii

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
